{
    "scripts": {
        "test:chrome:persistent": "cypress run --browser chrome --no-exit",
        "posttest:chrome:persistent": "node ./cypress/support/multiple-cucumber-html-reporter.js && node ./cypress/support/cucumber-html-reporter.js",
        "test:chrome": "cypress run --browser chrome",
        "posttest:chrome": "node ./cypress/support/multiple-cucumber-html-reporter.js && node ./cypress/support/cucumber-html-reporter.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "test:chrome:persistent:headless": "cypress run --headless --browser chrome --no-exit",
        "posttest:chrome:persistent:headless": "node ./cypress/support/multiple-cucumber-html-reporter.js && node ./cypress/support/cucumber-html-reporter.js",
        "test:chrome:headless": "cypress run --headless --browser chrome",
        "posttest:chrome:headless": "node ./cypress/support/multiple-cucumber-html-reporter.js && node ./cypress/support/cucumber-html-reporter.js",
        "test:chrome:positivo":"./node_modules/.bin/cypress-tags run -e TAGS=\"@Positivo\" --browser chrome --headless",
        "posttest:chrome:positivo": "node ./cypress/support/multiple-cucumber-html-reporter.js && node ./cypress/support/cucumber-html-reporter.js",
        "test:chrome:negativo":"./node_modules/.bin/cypress-tags run -e TAGS=\"@Negativo\" --browser chrome --headless",
        "posttest:chrome:negativo": "node ./cypress/support/multiple-cucumber-html-reporter.js && node ./cypress/support/cucumber-html-reporter.js"

    },
    "cypress-cucumber-preprocessor": {
        "step_definitions": "cypress/support/steps",
        "nonGlobalStepDefinitions": false,
        "stepDefinitions": "cypress/support/steps",
        "cucumberJson": {
            "generate": true,
            "outputFolder": "cypress/cucumber-json",
            "filePrefix": "",
            "fileSuffix": ".cucumber"
        }
    },
    "devDependencies": {
        "cucumber-html-reporter": "^5.2.0",
        "cypress": "^6.1.0",
        "cypress-cucumber-preprocessor": "^4.0.0",
        "multiple-cucumber-html-reporter": "^1.18.0"
    }
}
